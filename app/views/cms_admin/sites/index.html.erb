<%= link_to span_tag(t('.create_site')), new_cms_admin_site_path, :class => 'big button' %>
<h1><%= t('.title') %></h1>

<ul class='list'>
  <% @cms_sites.each do |cms_site| %>
    <li id='cms_site_<%= cms_site.id %>'>
      <div class='item'>
        <div class='icon'></div>
        <div class='action_links'>
          <%= link_to t('.admin'), cms_admin_pages_url(:host => cms_site.hostname, :port => request.port) %>
          <%= link_to t('.edit'), edit_cms_admin_site_path(cms_site) %>
          <%= link_to t('.delete'), cms_admin_site_path(cms_site), :method => :delete, :confirm => t('.are_you_sure') %>
        </div>
        <div class='label'>
          <%= link_to cms_site.label, edit_cms_admin_site_path(cms_site) %>
          <div class='sublabel'>
            <%= link_to cms_site.hostname, cms_html_url(:host => cms_site.hostname, :port => request.port), :target => '_blank' %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>
